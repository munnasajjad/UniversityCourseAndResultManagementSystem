@using UniversityManagementSystemWebApp.Models
@model EnrollCourse
@{
    ViewBag.Title = "Enroll Course";
    List<Student> studentInfo = ViewBag.StudentInfo;
    List<Course> courses = ViewBag.Courses;
    string message = ViewBag.Message;
    var isCourseEnrolled = ViewBag.IsCourseEnrolled;
}

@section styles
{
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-datepicker.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/Style.css" rel="stylesheet" />

}

<h2>Enroll In a Course</h2>
<div class="table-container">

    @using (Html.BeginForm())
    {
        <table>
            <tr>
                <td>@Html.LabelFor(x => x.StudentId)</td>
                <td>
                    @Html.DropDownListFor(x => x.StudentId, new SelectList(studentInfo, "Id", "RegistrationNumber"), "---Select registration number---", (new { @class = "table-container" }))
                    @Html.ValidationMessageFor(x => x.StudentId)
                </td>
            </tr>
            <tr>
                <td><label for="Name">Name</label></td>
                <td><input id="Name" name="Name" type="text" readonly="readonly" /></td>
            </tr>

            <tr>
                <td><label for="Email">Email</label></td>
                <td><input id="Email" name="Email" type="text" readonly="readonly" /></td>
            </tr>

            <tr>
                <td><label for="Department">Department</label></td>
                <td><input id="Department" name="Department" type="text" class="Adjust" readonly="readonly" /></td>
            </tr>

            <tr>
                <td>@Html.LabelFor(x => x.CourseId)</td>
                <td>
                    @Html.DropDownListFor(x => x.CourseId, new SelectList(""), "---Select Course---", new { @class = "table-container" })
                    @Html.ValidationMessageFor(x => x.CourseId)
                </td>
            </tr>
            <tr>
                <td>@Html.LabelFor(x => x.Date)</td>
                <td>
                    @Html.TextBoxFor(x => x.Date, new { @class = "Adjust" })
                    @Html.ValidationMessageFor(x => x.Date)
                </td>
            </tr>
            <tr>
                <td></td>
                <td><input id="submit" type="submit" value="Enroll" class="btn-group" /></td>
            </tr>
        </table>
    }
</div>

@if (message != null)
{
    if (isCourseEnrolled)
    {
        <div style="text-align: center; color: red">
            <h6>@message</h6>
        </div>
    }
    else
    {
        <div style="text-align: center; color: forestgreen">
            <h6>@message</h6>
        </div>
    }
}

@section scripts{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/bootstrap-datepicker.min.js"></script>

    <script>
        $(function () {
            $('#Date').datepicker({
                format: "dd/mm/yyyy",
                weekStart: 6,
                todayBtn: "linked",
                daysOfWeekHighlighted: "5",
                todayHighlight: true,
                orientation: "bottom auto",
                autoclose: true
            });
            $('#StudentId').on('change', function () {
                var stuId = $('#StudentId').val();
                var json =
                {
                    studentId: stuId
                };
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("GetStudentInfoByStudentId", "Course")',
                    contentType: 'application/json',
                    data: JSON.stringify(json),
                    success: function (response) {
                        $('#Name').val(response.Name);
                        $('#Email').val(response.Email);
                    }
                });
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("GetDepartmentByStudentId", "Course")',
                    contentType: 'application/json',
                    data: JSON.stringify(json),
                    success: function (response) {
                        $('#Department').val(response.Name);
                    }
                });
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("GetAllCourses", "Course")',
                    contentType: 'application/json',
                    data: JSON.stringify(json),
                    success: function (response) {
                        $('#CourseId').empty();
                        $('#CourseId').append('<option value="">---Select course---</option>');
                        $.each(response, function (key, value) {
                            $('#CourseId').append('<option value="' + value.Id + '">' + value.Code + '</option>');
                        });
                    }
                });
            });
        });
    </script>
}

